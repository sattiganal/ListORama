        <h6 class="border-bottom border-gray pb-2 mb-0">
            New Group
        </h6><br />
        <!-- <h1>Create Group</h1>-->
        <!-- <h4>Enter the group name and click the "Submit" button</h4>
        <hr />-->
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <!--<label class="control-label"></label>-->
                        <input asp-for="listGroupName" class="form-control" placeholder="Enter Group Name" />
                        <span asp-validation-for="listGroupName" class="text-danger"></span>
                        <input asp-for="userID" type="hidden" class="form-control" />
                    </div>
                    <div class="form-group">
                        <br />
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <!--<div>
            <a asp-action="">Back to List</a>
        </div>-->

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </div>

</main>
