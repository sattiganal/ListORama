@model ListORama.Models.ListGroup

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAED.cshtml";
}

<h1>Create Group</h1>

<h4>Enter the group name and click the "Submit" button</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Group Name</label>
                <input asp-for="listGroupName" class="form-control" />
                <span asp-validation-for="listGroupName" class="text-danger"></span>
                <input asp-for="userID" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <br/>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
