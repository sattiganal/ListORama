@model ListORama.Models.ListGroupUser

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAED.cshtml";
}

<h1>Add User</h1>

<h4>Select the group and user and select the "Submit" button</h4>
<hr />
<div class="row">
    <div class="col-md-4" >
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Select User <br/>
                @Html.DropDownListFor(c => c.userID, ViewData["StudDataVD"] as SelectList, htmlAttributes: new { @class = "form-control", id = "userID" }) <br />
                Select Group <br/>
                @Html.DropDownListFor(c => c.listGroupID, ViewData["GroupDataVD"] as SelectList, htmlAttributes: new { @class = "form-control", id = "listGroupID" })<br />
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
    
</div>
        
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
